<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/txtName" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.502"
            android:hint="@string/pName"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/txtAge" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtName" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtCity" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.52"
            android:inputType="number" app:layout_constraintHorizontal_bias="0.502" android:hint="@string/pAge"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/txtCity" app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="260dp" android:hint="@string/pCity"/>
    <Button
            android:text="@string/btnSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCity"
            android:layout_marginStart="84dp" app:layout_constraintStart_toStartOf="parent"
            android:onClick="saveData" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button3" app:layout_constraintHorizontal_bias="0.009"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button4"/>
    <Button
            android:text="@string/btnView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCity"
            android:layout_marginEnd="84dp" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="viewdata" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button4"/>
    <Button
            android:text="@string/btnViewAll"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4" android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:onClick="viewall"/>
</android.support.constraint.ConstraintLayout>